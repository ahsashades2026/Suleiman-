// ========== ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¥Ø­ØµØ§Ø¦ÙŠØ§Øª ==========
function updateStats() {
    const stats = document.querySelectorAll('.stat-number');
    stats.forEach(stat => {
        const target = parseInt(stat.dataset.count);
        animateCount(stat, target);
    });
}

function animateCount(element, target) {
    let current = 0;
    const increment = target / 50;
    const timer = setInterval(() => {
        current += increment;
        if (current >= target) {
            element.textContent = target;
            clearInterval(timer);
        } else {
            element.textContent = Math.floor(current);
        }
    }, 30);
}

// ========== Ø¥Ø¯Ø§Ø±Ø© Ø§Ù„Ø³Ù„Ø© ==========
function addToCart(serviceId) {
    const service = services.find(s => s.id === serviceId);
    if (!service) return;
    
    const existingItem = cart.find(item => item.id === serviceId);
    
    if (existingItem) {
        existingItem.quantity += 1;
    } else {
        cart.push({
            id: service.id,
            name: service.name,
            price: service.price,
            unit: service.unit,
            icon: service.icon,
            quantity: 1
        });
    }
    
    saveCart();
    updateCartCount();
    showNotification(`ØªÙ…Øª Ø¥Ø¶Ø§ÙØ© "${service.name}" Ø¥Ù„Ù‰ Ø§Ù„Ø³Ù„Ø©`, 'success');
    
    if (document.querySelector('.cart-sidebar.active')) {
        renderCartItems();
        updateCartSummary();
    }
}

function removeFromCart(serviceId) {
    cart = cart.filter(item => item.id !== serviceId);
    saveCart();
    updateCartCount();
    renderCartItems();
    updateCartSummary();
    showNotification('ØªÙ…Øª Ø¥Ø²Ø§Ù„Ø© Ø§Ù„Ù…Ù†ØªØ¬ Ù…Ù† Ø§Ù„Ø³Ù„Ø©', 'info');
}

function updateQuantity(serviceId, newQuantity) {
    if (newQuantity < 1) {
        removeFromCart(serviceId);
        return;
    }
    
    const item = cart.find(item => item.id === serviceId);
    if (item) {
        item.quantity = newQuantity;
        saveCart();
        renderCartItems();
        updateCartSummary();
    }
}

function saveCart() {
    localStorage.setItem('cart', JSON.stringify(cart));
}

// ========== Ø¹Ø±Ø¶ Ø¹Ù†Ø§ØµØ± Ø§Ù„Ø³Ù„Ø© ==========
function renderCartItems() {
    const cartItems = document.getElementById('cartItems');
    if (!cartItems) return;
    
    if (cart.length === 0) {
        cartItems.innerHTML = `
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <h4>Ø§Ù„Ø³Ù„Ø© ÙØ§Ø±ØºØ©</h4>
                <p>Ø£Ø¶Ù Ø®Ø¯Ù…Ø§Øª Ù„ØªØ¨Ø¯Ø£ Ø§Ù„ØªØ³ÙˆÙ‚</p>
                <a href="#services" class="cta-button primary" onclick="closeCart()">ØªØµÙØ­ Ø§Ù„Ø®Ø¯Ù…Ø§Øª</a>
            </div>
        `;
        return;
    }
    
    cartItems.innerHTML = cart.map(item => `
        <div class="cart-item">
            <div class="cart-item-image">
                <div class="cart-icon">${item.icon}</div>
            </div>
            <div class="cart-item-details">
                <div class="cart-item-title">${item.name}</div>
                <div class="cart-item-price">${(item.price * item.quantity).toLocaleString()} Ø±.Ø³</div>
                <div class="cart-item-quantity">
                    <button class="quantity-btn decrease" data-id="${item.id}">-</button>
                    <span class="quantity-value">${item.quantity}</span>
                    <button class="quantity-btn increase" data-id="${item.id}">+</button>
                </div>
            </div>
            <button class="cart-item-remove" data-id="${item.id}">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    `).join('');
}

// ========== ØªØ­Ø¯ÙŠØ« Ù…Ù„Ø®Øµ Ø§Ù„Ø³Ù„Ø© ==========
function updateCartSummary() {
    const subtotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    const tax = subtotal * 0.15;
    const total = subtotal + tax;
    
    document.querySelector('.cart-subtotal').textContent = subtotal.toLocaleString() + ' Ø±.Ø³';
    document.querySelector('.cart-tax').textContent = tax.toLocaleString() + ' Ø±.Ø³';
    document.querySelector('.cart-total').textContent = total.toLocaleString() + ' Ø±.Ø³';
}

// ========== ØªØ­Ø¯ÙŠØ« Ø¹Ø¯Ø§Ø¯ Ø§Ù„Ø³Ù„Ø© ==========
function updateCartCount() {
    const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
    const cartCount = document.querySelector('.cart-count');
    if (cartCount) {
        cartCount.textContent = totalItems;
        cartCount.style.display = totalItems > 0 ? 'flex' : 'none';
    }
}

// ========== ÙØªØ­ ÙˆØ¥ØºÙ„Ø§Ù‚ Ø§Ù„Ø³Ù„Ø© ==========
function openCart() {
    document.querySelector('.cart-sidebar').classList.add('active');
    renderCartItems();
    updateCartSummary();
}

function closeCart() {
    document.querySelector('.cart-sidebar').classList.remove('active');
}

function toggleCart() {
    const cartSidebar = document.querySelector('.cart-sidebar');
    if (cartSidebar.classList.contains('active')) {
        closeCart();
    } else {
        openCart();
    }
}

// ========== Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ù„Ø³Ù„Ø© ==========
function checkCart() {
    if (cart.length > 0 && !localStorage.getItem('cartNotified')) {
        showNotification(`Ù„Ø¯ÙŠÙƒ ${cart.length} Ø¹Ù†ØµØ± ÙÙŠ Ø§Ù„Ø³Ù„Ø©`, 'info');
        localStorage.setItem('cartNotified', 'true');
    }
}

// ========== Ø¥Ø´Ø¹Ø§Ø±Ø§Øª ==========
function showNotification(message, type = 'success') {
    const notification = document.createElement('div');
    notification.className = `notification ${type}`;
    notification.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
        <span>${message}</span>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 3000);
}

// ========== Ø§Ù„Ø¨Ø­Ø« ==========
function searchServices() {
    const searchInput = document.getElementById('searchInput');
    const searchTerm = searchInput.value.toLowerCase().trim();
    
    if (!searchTerm) {
        renderServices();
        return;
    }
    
    const filtered = services.filter(service => 
        service.name.toLowerCase().includes(searchTerm) ||
        service.description.toLowerCase().includes(searchTerm) ||
        service.category.toLowerCase().includes(searchTerm)
    );
    
    const servicesGrid = document.getElementById('servicesGrid');
    servicesGrid.innerHTML = '';
    
    if (filtered.length === 0) {
        servicesGrid.innerHTML = `
            <div class="empty-state" style="grid-column: 1/-1; text-align: center; padding: 40px;">
                <i class="fas fa-search" style="font-size: 48px; color: var(--gray); margin-bottom: 20px;"></i>
                <h3>Ù„Ù… ÙŠØªÙ… Ø§Ù„Ø¹Ø«ÙˆØ± Ø¹Ù„Ù‰ Ø®Ø¯Ù…Ø§Øª</h3>
                <p>Ø¬Ø±Ø¨ Ù…ØµØ·Ù„Ø­Ø§Øª Ø¨Ø­Ø« Ø£Ø®Ø±Ù‰</p>
            </div>
        `;
    } else {
        filtered.forEach(service => {
            const serviceCard = createServiceCard(service);
            servicesGrid.appendChild(serviceCard);
        });
    }
    
    document.getElementById('loadMoreBtn').style.display = 'none';
}

// ========== ØªØ£Ø«ÙŠØ±Ø§Øª Ø§Ù„ØªÙ…Ø±ÙŠØ± ==========
function setupScrollEffects() {
    // Ø²Ø± Ø§Ù„Ø¹ÙˆØ¯Ø© Ù„Ù„Ø£Ø¹Ù„Ù‰
    const backToTop = document.querySelector('.back-to-top');
    
    window.addEventListener('scroll', () => {
        if (window.scrollY > 500) {
            backToTop.classList.add('visible');
        } else {
            backToTop.classList.remove('visible');
        }
        
        // ØªØ£Ø«ÙŠØ±Ø§Øª Ø¸Ù‡ÙˆØ± Ø§Ù„Ø¹Ù†Ø§ØµØ±
        animateOnScroll();
    });
    
    backToTop.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
}

function animateOnScroll() {
    const elements = document.querySelectorAll('.animate-fade-in');
    
    elements.forEach(element => {
        const elementTop = element.getBoundingClientRect().top;
        const elementVisible = 150;
        
        if (elementTop < window.innerHeight - elementVisible) {
            element.classList.add('animate');
        }
    });
}

